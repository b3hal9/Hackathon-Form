<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=title%></title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>

    
            <h2 style="text-align: center; color:red;"><%= title%></h2>
            <h3 style="text-align: center;"><%= message%></h3>

            <div class="container pt-5  custom" >
                           
              <div class="card"  style="align-items: center;">
               <div class="card-header text-center text-dark bg-transparent"><p class="h3" style="text-decoration: underline ; font-weight: bold;">Godawari Hackathon:</p></div>
               <div class="card-body text-dark photo">
              <form action="/register" method="POST">
                <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="first">First Name:</label>
                  <input type="text" class="form-control" name="first" required value="<%= data.first %>">
                  <% if(error.first) { %>
                    <p style="color: red;"><%= error.first.msg%></p>
                  <% } %>
                </div>
                <div class="form-group col-md-6">
                  <label for="last">Last Name:</label>
                  <input type="text" class="form-control" name="last" required value="<%= data.last %>">
                  <% if(error.last) { %>
                    <p style="color: red;"><%= error.last.msg%></p>
                  <% } %>
                </div>
              </div>
                  <div class="form-group">
                      <label for = 'email'>Email :</label>
                      <input type="email" class="form-control" name ="email" placeholder="name@example.com" required value="<%= data.email %>">
                      <small class="form-text text-muted">Please use your valid Email Address.</small>
                    </div>
                  <div class="input-group mb-2 mr-sm-2">
                      <div class="input-group-prepend">
                        <div class="input-group-text">+977</div>
                      </div>
                      <input type="number" name="phone" class="form-control" placeholder="Your Phone number: " required value="<%= data.phone %>">
                    </div>
                    <% if(error.phone) { %>
                      <p style="color: red;"><%= error.phone.msg%></p>
                    <% } %>
                  
                  <!-- <div class="form-group">
                    <label >Address :</label>
                    <input type="text" class="form-control" placeholder="Your Current Address">
                  </div>
                 -->
                    <div class="form-group col-md-">
                      <label for = "faculty" >Faculty :</label>
                      <select id="faculty" onchange="setGrade()" name ="faculty" class="form-control" required >
                        <option  value="Bsc.CSIT">Bsc.CSIT</option>
                        <option  value="Diploma Civil">Diploma Civil</option>
                        <option  value="Diploma Computer">Diploma Computer</option>
                        <option value="Management">Management</option>
                        <option  value="Science">Science</option>
                        <option value="Hotel Management">Hotel Management</option>
                        <option  value="BBS">BBS</option>

                      </select>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <select id="Grade" name="Grade" class="form-control" required="">
                     
                          <option value="1st yr">1yr</option>
                          <option value="2nd yr">2yr</option>
                          <option value="3rd yr">3yr</option>
                          <option value="4th yr">4yr</option>           
                      </select>
                      </div>
                      <div class="form-group col-md-6">
                        <input type="text" name="section" class="form-control" placeholder="Your section/Semister " value="<%= data.section %>">
                        <small class="form-text text-muted">This is not mandatory.</small>
                      </div>
                    </div>
                    
                     
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="field">Interested In :</label>
                        <select  name="field" class="form-control">
                          <option  value="Static Webpage Designing">Static WebPage Designing</option>
                          <option  value="Competitive Programming">Competitive Programming</option>
                          
                        </select>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="level">I'm a:</label>
                        <select  name="level" class="form-control">
                          <option  value="Pro">Pro</option>
                          <option  value="Intermediate">Intermediate</option>
                          <option value="Beginner">Beginner</option>
                          
                        </select>
                      </div>
                    </div>
                  
                    <div class="form-row">
                      
                      <div class="form-group col-md-6">
                        <label for="sex" class="form-check-label" >
                            Gender : 
                           </label>
                        <div class="form-check"> 
                         <input class="form-check-input" type="radio" name="sex" value="Male" required>
                          <label for="male" class="form-check-label" >
                           Male
                          </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sex" value="female" required>
                            <label  for="Female" class="form-check-label" >
                             Female
                            </label>
                          </div>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="feedback">Expection from us :</label>
                        <textarea class="form-control" name="feedback" placeholder = "Your Suggestion." value="<%= data.feedback %>"></textarea>
                    </div>
                    </div>
                  
                  
                
                  <div class="form-group">
                    <div class="form-check">
                      <input class="form-check-input" name="agreement" type="checkbox"required>
                      <label for="agreement" class="form-check-label">
                        I Agree. <a href="/about" >Please Read Our Terms & Conditions Before Sumbiting.</a>
                      </label>
                    </div>
                  </div>
              
                  
                  <button type="submit" name ="submit" class="btn btn-primary">Register</button>
                </form>
                </div>
          
      </div>
    </div>
  
    <script type="text/javascript">
      faculty = document.getElementById("faculty");
      Grade = document.getElementById("Grade");
  
  function setGrade(){
      resetGradeOpt();
      switch(faculty.value){
        case "Bsc.CSIT":
        case "BBS": for (i = 0 ; i < 4  ;i++ ){
                            var option =  document.createElement("option");
                            option.text = i+1+"yr";
                            option.value = i+1;
                            Grade.add(option);
                          }
                          break;
  
        case "Diploma Civil": 
        case "Diploma Computer":
                          for (i = 0 ; i < 3  ;i++ ){
                            var option =  document.createElement("option");
                            option.text = i+1+"yr";
                            option.value = i+1;
                            Grade.add(option);
                          }
                          break;
        case "Management":
        case "Science":
        case "Hotel Management":
                          for (i = 0 ; i < 2  ;i++ ){
                            var option =  document.createElement("option");
                            option.text = "1"+eval(i+1);
                            option.value = i+1;
                            Grade.add(option);
                          }
                          break;
  
     
      }  
  }
  
  function resetGradeOpt(){
    while(Grade.options.length > 0){
      Grade.remove(0);
    }
  }
  
    
  
  
  </script>


  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>







  
            