                  <% } %>
                   
                  </div>
                  <div class="form-group col-md-6">
                    <div class="textbox"> <i class="card-box fa fa-user"></i> <input type="text" name="last" required placeholder="Last Name" value="<%= data.last %>"></div>
                   
                  </div>
                  <% if(error.last) { %>
