                <form action="/register" method="POST">
                  <div class="form-row">
                  <div class="form-group col-md-6">
                   <div class="textbox">
                    <i class="card-box fa fa-user"></i> <input type="text" name="first" required placeholder="First Name" value="<%= data.first %>">
                
                   </div>
                   <% if(error.first) { %>
